# Production Environment Variables for Comparty
# Copy this to /home/comparty/app/.env.local on your droplet

# DigitalOcean Spaces (you need to create these)
DO_SPACES_KEY=your_actual_spaces_key
DO_SPACES_SECRET=your_actual_spaces_secret
DO_SPACES_BUCKET=comparty-prod
DO_SPACES_REGION=nyc3
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com

# PayPal (use your actual credentials)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_WEBHOOK_ID=pending_webhook_setup
PAYPAL_ENVIRONMENT=sandbox

# Database (local PostgreSQL on droplet)
DATABASE_URL=postgresql://comparty:CompartyDB2025!@localhost:5432/comparty_prod

# Redis (local Redis on droplet)
REDIS_URL=redis://localhost:6379

# App
APP_URL=http://137.184.183.136
NODE_ENV=production
JWT_SECRET=comparty_jwt_secret_2025_change_this_to_random_string
PORT=3000

# Email (you need SendGrid account)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@comparty.app

# OpenAI (your API key)
OPENAI_API_KEY=your_openai_api_key_here

# Features
AI_SCORING_ENABLED=true
VIDEO_SUPPORT_ENABLED=false

# Security (generate random strings for production)
CSRF_SECRET=comparty_csrf_secret_2025_change_this
ENCRYPTION_KEY=comparty_encryption_key_2025_change_this